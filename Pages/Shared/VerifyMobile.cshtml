@{Layout = null;}
@model ParcelX.Models.ParcelXCusModel

<html lang="en" class="hydrated">
<head>
    <style data-styles="">
        ion-icon {
            visibility: hidden
        }

        .hydrated {
            visibility: inherit
        }
    </style>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, viewport-fit=cover" />
    <title>@ViewData["Title"] ParcelX </title>
    <link rel="stylesheet" href="~/assets/css/style.css">

    <meta name="keywords" content="bootstrap, mobile template, cordova, phonegap, mobile, html, responsive" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/img/Logo.png">
    <link rel="icon" type="image/png" href="~/img/Logo.png" sizes="32x32">
    <link rel="shortcut icon" href="~/img/Logo.png">
</head>

<body class="">

    <!-- loader -->
    <div id="loader" style="display: none;">
        <img src="assets/img/loading-icon.png" alt="icon" class="loading-icon">
    </div>
    <!-- * loader -->
    <!-- App Header -->
    <div class="appHeader no-border transparent position-absolute">
        <div class="left">
            <a href="#" class="headerButton goBack">
                <ion-icon name="chevron-back-outline" role="img" class="md hydrated" aria-label="chevron back outline"></ion-icon>
            </a>
        </div>
        <div class="pageTitle"></div>
        <div class="right">
        </div>
    </div>
    <!-- * App Header -->
    <!-- App Capsule -->
    <div id="appCapsule">

        <div class="appHeader no-border transparent position-absolute">

            <div class="pageTitle">
                <img src="~/img/Logo.png" alt="logo" style="width:200px;margin-top:40%">
            </div>
            <div class="right">
            </div>
        </div>
        <br />
        <br />
        <br />
        <br />
        <div class="section mt-2 text-center">
            <h4>Enter 4 digit sms verification code</h4>
        </div>
        
            <div class="section mb-5 p-2">
                <form action="index.html">
                    <div class="form-group basic">
                        <input type="text" class="form-control verification-input" id="Token" placeholder="••••" maxlength="4">
                    </div>

                    <div class="form-button-group transparent">
                        <button type="button" onclick="VerifyToken()"  style="background-color:#dea00b!important;border-color:#dea00b!important" class="btn btn-primary btn-block btn-lg">Verify</button>
                    </div>

                </form>
            </div>
        
        </div>
    <div id="notification-12" class="notification-box">
        <div class="notification-dialog ios-style bg-success">
            <div class="notification-header">

                <div class="right">
                    <span>Now</span>
                    <a href="#" class="close-button">
                        <ion-icon name="close-circle" role="img" class="md hydrated" aria-label="close circle"></ion-icon>
                    </a>
                </div>
            </div>
            <div class="notification-content">
                <div class="in">
                    <h3 class="subtitle" id="Error"></h3>

                </div>
            </div>
        </div>
    </div>



</body>
</html>






<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<!-- Bootstrap-->
<script src="~/assets/js/lib/popper.min.js"></script>
<script src="~/assets/js/lib/apexcharts.min.js"></script>
<script src="~/assets/js/lib/bootstrap.min.js"></script>
<script src="~/assets/js/lib/splide.min.js"></script>
<!-- Ionicons -->
<script src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js"></script>
<!-- Owl Carousel -->
<script src="~/assets/js/lib/owl.carousel.min.js"></script>
<!-- Base Js File -->
<script src="~/assets/js/base.js"></script>
<script>

    function VerifyToken() {
        var Token = $('#Token').val()

        if (Token.length > 3) {


            if (Token == "0000") {
                location.href = 'https://localhost:5001/Home/Profile'
            } else {
                $('#Error').text("Invalid token provided");
                notification('notification-12', 5000)
            }
            
        } else {
            $('#Error').text("Please provide a valid token");
            notification('notification-12', 5000)
        }

    }


    function Notify() {
        $('#Error').text("We just sent a verification code to your mobile number");
        notification('notification-12', 5000)
    }

    Notify()

</script>
