@model ParcelX.Models.ParcelXCusModel
    <!-- loader -->
<div id="loader" style="background-color:white">
    <img src="~/img/loader.png" alt="icon" class="loading-icon">
</div>
<!-- * loader -->
<!-- App Header -->
<div class="Floatup" style="width:100%">

    <style>


        .Floatup {
            z-index: 1;
            position: absolute;
            top: 0px;
            left: 0px;
        }
    </style>
    <div class="appHeader no-border transparent position-absolute">
        <div class="left">
            <a href="javascript:;" class="headerButton goBack">
                <ion-icon style="color:white" name="chevron-back-outline"></ion-icon>
            </a>
        </div>
        <div class="pageTitle">
            <img src="~/img/Logo.png" alt="logo" style="width:200px;margin-top:40%">
        </div>
        <div class="right">
        </div>
    </div>
    <!-- * App Header -->
    <!-- App Capsule -->
    <div id="appCapsule">
        <br /><br />
        <div class="section mb-5 p-2">
            <form action="app-index.html">
                <div class="card" style="background: rgba(0, 0, 0, 0.5);">
                    <div class="card-body pb-1">

                        <div class="form-group basic">
                            <div class="input-wrapper">
                                <label class="label" for="email1">E-mail</label>
                                <input type="email" class="form-control" id="email1" placeholder="Your e-mail">
                                <i class="clear-input">
                                    <ion-icon name="close-circle"></ion-icon>
                                </i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-button-group transparent">
                    <button type="submit" style="background-color:#dea00b!important;border-color:#dea00b!important" class="btn btn-primary btn-block btn-lg">Reset Password</button>
                </div>

            </form>
        </div>

    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<!-- Bootstrap-->
<script src="~/assets/js/lib/popper.min.js"></script>
<script src="~/assets/js/lib/apexcharts.min.js"></script>
<script src="~/assets/js/lib/bootstrap.min.js"></script>
<script src="~/assets/js/lib/splide.min.js"></script>
<!-- Ionicons -->
<script src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js"></script>
<!-- Owl Carousel -->
<script src="~/assets/js/lib/owl.carousel.min.js"></script>
<!-- Base Js File -->
<script src="~/assets/js/base.js"></script>
